".source.po":
  "New header":
    prefix: "hdr"
    body: '''
      "${1:header name}: ${2: header value}\\n"
      $3'''
  "Message ID":
    prefix: "id"
    body: '''
      msgid "${1:original text}"
      $2'''
  "Message String":
    prefix: "str"
    body: '''
      msgstr "${1:translated text}"
      $2'''

  "Context":
    prefix: "ctx"
    body: '''msgctxt "${1:context}"
      $2'''

  'New simple Message':
    prefix: 'msg'
    body: '''msgid "$1"
    msgstr "$2"

    $3
    '''

  'New Message in a context':
    prefix: 'msgc'
    body: '''msgctxt "$1"
    msgid "$2"
    msgstr "$3"

    $4
    '''
